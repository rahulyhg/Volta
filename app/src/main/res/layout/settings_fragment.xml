<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/gmailLyt"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gmailIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_iconfinder_gmail_1024880"/>

        <TextView
            style="@style/TextViewLabelCategory"
            android:id="@+id/emailProTv"
            android:text="@string/configure_email_professionel" />
    </LinearLayout>

    <Button
        android:id="@+id/settingSubmitBtn"
        android:layout_margin="16dp"
        android:text="valider"
        android:padding="8dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>